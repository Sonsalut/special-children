{
	"compilerOptions": {
	  "allowJs": true,
	  "allowSyntheticDefaultImports": true,
	  "esModuleInterop": true,
	  "isolatedModules": true,
	  "jsx": "react",
	  "lib": ["es6"],
	  "moduleResolution": "node",
	  "noEmit": true,
	  "strict": true,
	  "target": "esnext",
	  "baseUrl": ".",
	  "paths": {
        "tests": ["tests/*"],
		    "*": ["./src/*"],
        "@assets/*": ["./src/assets/*"],
        "@common/*": ["./src/common/*"],
        "@components/*": ["./src/components/*"],
        "@hooks/*": ["./src/hooks/*"],
        "@mocks/*": ["./src/mocks/*"],
        "@network/*": ["./src/network/*"],
        "@redux/*": ["./src/redux/*"],
        "@res/*": ["./src/res/*"],
        "@routers/*": ["./src/routers/*"],
        "@screens/*": ["./src/screens/*"],
        "@types/*": ["./src/types/*"],
        "@utils/*": ["./src/utils/*"],
      },
	},
	"exclude": [
	  "node_modules",
	  "babel.config.js",
	  "metro.config.js",
	  "jest.config.js"
	]
}